<Window x:Class="WpfApp1.Window_open"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Window_open" Width="390" Height="300">
    <Grid>
        <Label Content="Введите название файла" HorizontalAlignment="Center" Margin="0,93,0,0" VerticalAlignment="Top" FontSize="24"/>
        <Button Content="OK" HorizontalAlignment="Center" Margin="0,235,0,0" VerticalAlignment="Top" Width="30" Height="20" Click="Button_Click"/>
        <TextBox x:Name="name_open" HorizontalAlignment="Center" Margin="0,151,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="200" Height="28"/>

    </Grid>
</Window>
